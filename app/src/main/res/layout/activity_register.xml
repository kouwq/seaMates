<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:text="@string/welcome"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/account" />

                <EditText
                    android:id="@+id/reg_et_account"
                    style="@style/Register_RightEditText"
                    android:hint="@string/account_hint"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/username" />

                <EditText
                    android:id="@+id/reg_et_name"
                    style="@style/Register_RightEditText"
                    android:hint="@string/username_hint"
                    android:inputType="textPostalAddress" />
            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/sex" />

                <RadioGroup
                    android:id="@+id/reg_rg_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/reg_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/reg_rad_male" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="@string/reg_rad_fem" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/pwd" />

                <EditText
                    android:id="@+id/reg_et_pwd"
                    style="@style/Register_RightEditText"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword" />
            </LinearLayout>


            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/phone" />

                <EditText
                    android:id="@+id/reg_et_phone"
                    style="@style/Register_RightEditText"
                    android:hint="@string/phone_hint"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/grade" />

                <EditText
                    android:id="@+id/reg_et_grade"
                    style="@style/Register_RightEditText"
                    android:hint="@string/grade_hint"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    style="@style/Register_LeftTextView"
                    android:text="@string/major" />

                <EditText
                    android:id="@+id/reg_et_major"
                    style="@style/Register_RightEditText"
                    android:hint="@string/major_hint"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout style="@style/FormMainLayoutStyle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/idc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/reg_et_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/idc_hint"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_shape"
                android:text="@string/submit"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>