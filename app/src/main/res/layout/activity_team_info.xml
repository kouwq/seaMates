<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_light"
    android:padding="16dp"
    tools:context=".TeamInfoActivity">

    <TextView
        android:id="@+id/teamInfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary"
        android:gravity="center"
        android:text="teamName"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamInfo_cpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cpName" />

        <TextView
            android:id="@+id/teamInfo_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="leader" />
    </LinearLayout>

    <TextView
        android:id="@+id/teamInfo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="detail"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/teamInfo_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_text"
        android:text="qq" />

    <TextView
        android:id="@+id/teamInfo_matesNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_dark"
        android:gravity="end"
        android:text="matesNum" />

</LinearLayout>